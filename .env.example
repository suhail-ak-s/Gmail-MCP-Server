# Gmail MCP Server Environment Variables
# Copy this file to .env and fill in your values

# OAuth Client Credentials
# These can be obtained from the Google Cloud Console
GMAIL_CLIENT_ID=your_google_client_id
GMAIL_CLIENT_SECRET=your_google_client_secret

# OAuth Tokens
# These are normally generated during the OAuth flow, 
# but can be provided directly to skip the browser authentication
GMAIL_ACCESS_TOKEN=your_access_token
GMAIL_REFRESH_TOKEN=your_refresh_token
GMAIL_TOKEN_EXPIRY=1234567890000  # Timestamp in milliseconds

# Optional File Paths
# GMAIL_OAUTH_PATH=/custom/path/to/gcp-oauth.keys.json
# GMAIL_CREDENTIALS_PATH=/custom/path/to/credentials.json 

# Authentication Server Configuration
# GMAIL_AUTH_SERVER_HOST=localhost  # Hostname for the OAuth callback server (default: localhost)
# GMAIL_AUTH_SERVER_PORT=3000  # Port for the OAuth callback server (default: 3000) 